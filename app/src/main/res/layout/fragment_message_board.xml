<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/sky2_background"> <!-- Set your background image here -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:elevation="4dp">

        <!-- Pay attention text -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="8dp"
            android:text="Pay attention:"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="8dp"
            android:text="the default color is black, the color remain black even if the color was selected but you didn't hit on the &quot;ADD MESSAGE&quot; button"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <!-- Message 1 -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="true"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/messageEditText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Message 1"
                android:textColorHint="@color/secondaryText" />

            <TextView
                android:id="@+id/suggestionText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:textColor="@color/black" />

            <!-- Button to set suggestion as message -->
            <Button
                android:id="@+id/setSuggestionButton1"
                style="style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set as Message" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/colorButton1"
            style="style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Color" />

        <!-- Message 2 -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="true"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/messageEditText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Message 2"
                android:textColorHint="@color/secondaryText" />

            <TextView
                android:id="@+id/suggestionText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:textColor="@color/black" />

            <!-- Button to set suggestion as message -->
            <Button
                android:id="@+id/setSuggestionButton2"
                style="style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set as Message" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/colorButton2"
            style="style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Choose Color" />

        <!-- Message 3 -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="true"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/messageEditText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Message 3"
                android:textColorHint="@color/secondaryText" />

            <TextView
                android:id="@+id/suggestionText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:textColor="@color/black" />

            <!-- Button to set suggestion as message -->
            <Button
                android:id="@+id/setSuggestionButton3"
                style="style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set as Message" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/colorButton3"
            style="style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Choose Color" />

        <!-- Message 4 -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="true"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/messageEditText4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Message 4"
                android:textColorHint="@color/secondaryText" />

            <TextView
                android:id="@+id/suggestionText4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:textColor="@color/black" />

            <!-- Button to set suggestion as message -->
            <Button
                android:id="@+id/setSuggestionButton4"
                style="style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set as Message" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/colorButton4"
            style="style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Choose Color" />

        <!-- Add Messages Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/addButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Messages"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_gravity="center"
            app:cornerRadius="8dp"
            app:iconGravity="textStart"
            app:iconPadding="8dp" />

    </LinearLayout>
</ScrollView>
